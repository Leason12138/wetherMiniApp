<view class="mapmap" hover-class="none" hover-stop-propagation="false">
  <!-- 地图容器 -->
  <view class="search">
    <van-search bindfocus="inputFocus" bindblur="inputBlur" model:value="{{ value }}" placeholder="请输入搜索关键词" bind:change="onChange"></van-search>
    <ul wx:if="{{sugsearch[0] && sugbool}}" class="sreachsug">
      <!-- <ul wx:if="{{sugsearch[0] && sugbool}}" class="sreachsug"> -->
      <li data-it="{{item}}" bindtap="litap" wx:key="index" wx:for="{{sugsearch}}">
        {{item.title}}
      </li>
    </ul>
  </view>
<van-toast  id="van-toast" />

  <view class="mapinside">
    <map id="myMap" show-location markers="{{markers}}" style="width:100%;height:300px;" longitude="{{longitude}}" latitude="{{latitude}}" scale='16'></map>
    <button class="minbtn back" bindtap="backUserNowPos">
      <van-icon color='white' name="home-o" />
    </button>
    <view bindtap="totarget" class="minbtn totarget">
      <van-icon color='white' name="location-o" />
      <text>导航</text>
    </view>
  </view>
  <view wx:key="index" wx:for="{{NearFundata}}">{{item.title}}</view>
  <view wx:key="index" wx:for="{{NearHoteldata}}">{{item.title}}</view>
  <view wx:key="index" wx:for="{{NearFooddata}}">{{item.title}}</view>
  <view wx:key="index" wx:for="{{NearSightsdata}}">{{item.title}}</view>
</view>